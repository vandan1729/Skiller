# Environment Variables Configuration

# Database
DATABASE_URL=postgresql://skiller_user:skiller_pass@localhost:5432/skiller_db
POSTGRES_DB=skiller_db
POSTGRES_USER=skiller_user
POSTGRES_PASSWORD=skiller_pass

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# JWT Settings
JWT_SECRET=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Kafka Settings
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=skiller-grading
KAFKA_TOPIC_SUBMISSIONS=interview-submissions
KAFKA_TOPIC_RESULTS=grading-results

# AI Service
AI_SERVICE_URL=http://localhost:8001
OPENAI_API_KEY=your-openai-api-key

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Email Settings (for candidate invitations)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Frontend URLs
FRONTEND_URL=http://localhost:3000
CANDIDATE_PORTAL_URL=http://localhost:3000/candidate

# File Storage
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/static
